#!/bin/bash

set -e

# This finds the location where yadfig itself is stored
SOURCE="${BASH_SOURCE[0]}"
while [ -h "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  SOURCE="$(readlink "$SOURCE")"
  [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE" # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"

echo $DIR

mkdir -p .thumbnails

out='images.js'

echo "var items = [" > $out

for i in `ls *.jpg`
do
  width=$(identify $i | cut -d ' ' -f 3 | cut -d 'x' -f1)
  height=$(identify $i | cut -d ' ' -f 3 | cut -d 'x' -f2)
  echo -e "\t{"              >> $out
  echo -e "\t\tsrc:'$i',"    >> $out
  echo -e "\t\tw: $width,"   >> $out
  echo -e "\t\th: $height"   >> $out
  echo -e "\t},"             >> $out
  >&2 echo "$i" 
  convert $i -resize 450 .thumbnails/$i
done

echo "];" >> $out

base="`basename $(pwd)`"

echo 'window.addEventListener("load", function() {' >> $out
echo '  var a = document.createElement("a");' >> $out
echo "  a.href = \"$base.zip\"" >> $out
echo '  a.innerHTML = "zip"' >> $out
echo '  document.body.appendChild(a);' >> $out
echo '})' >> $out

cd ..
rm -f $base.zip
zip $base.zip $base/*.jpg
mv $base.zip $base
cd $base


cp $DIR/index.html .
cp -r $DIR/lib .
